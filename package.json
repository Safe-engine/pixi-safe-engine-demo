{
  "name": "pixi-safe-engine-demo",
  "version": "2.0.2",
  "description": "show case and code examples",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "start": "parcel src/index.html -p 8080",
    "sync-res": "bun ./node_modules/safex-sync-res/src/index.ts",
    "predev": "bun run sync-res",
    "dev": "parcel src/index.html -p 8080 --no-cache",
    "build": "parcel build src/index.html --no-cache --no-optimize --no-content-hash",
    "fix": "eslint ./src --ext .ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cocos-html5-ts": "*",
    "@safe-engine/cocos": "workspace:*",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-jsx": "^7.25.9",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@parcel/config-default": "^2.13.3",
    "@types/lodash": "^4.17.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "babel-plugin-safe-x-transform": "workspace:*",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-lodash-import-method": "^0.0.3",
    "eslint-plugin-prettier": "^5.2.3",
    "parcel": "^2.13.3",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "safex-sync-res": "^1.0.3",
    "typescript": "^5.7.3"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "staticFiles": {
    "staticPath": "res",
    "watcherGlob": "**"
  }
}